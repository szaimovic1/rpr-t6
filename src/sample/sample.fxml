            </columnConstraints>
            <rowConstraints>
                <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
                <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
                <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
                <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
                <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
            </rowConstraints>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <RadioButton mnemonicParsing="false" text="Redovan" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <RadioButton mnemonicParsing="false" text="Samofinansirajući" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <CheckBox mnemonicParsing="false" text="Specijalne boračke kategorije" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" />
            </children>
        </GridPane>

        <Button fx:id="potvrda" mnemonicParsing="false" onAction="#potvrda" text="Potvrdi" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    </children>
</GridPane>